pipeline {
    agent any
    stages {
         stage('Clean Workspace'){
        steps {
          cleanWs()
          }
      }
        stage ('Checkout') {
            steps {
                checkout scm
              }
            }
          stage('Install Newman') {
             steps {
                    bat "npm install newman"
                    bat "npx newman -v"
                    bat "npm install -g newman-reporter-allure"
                    bat "npm install -g newman-reporter-htmlextra"
            }
        }
        stage('Tests') {
            steps {
                 echo "Run tests"
                 bat "npx newman run BloomApi.postman_collection.json --reporters cli,allure,htmlextra --reporter-allure-export Allure --reporter-htmlextra-export TestResults/HtmlReport.html"
            }
        }
    }
}
