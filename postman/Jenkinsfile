pipeline {
  agent any
  stages {
    stage('First') {
      steps {
        echo "This stage is going to run very first"
      }
    }
    stage('Hello') {
      parallel {
        stage('one') {
          steps {
            echo "one; exit 1"
          }
        }
        stage('two') {
          steps {
            echo "two"
          }         
        }
        stage('three') {
          steps {
            echo 'three'
          }         
        }
      }
    }
  }
}
