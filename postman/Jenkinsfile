pipeline {
    agent any
    stages {
         stage('Clean Workspace'){
        steps {
          cleanWs()
          }
      }
        stage ('Checkout') {
            steps {
                checkout scm
              }
            }          
          stage('Install Newman') {
             steps {
                    bat "npm install newman"
                    bat "npx newman -v"
            }
        }
        stage('Tests') {
            steps {
                 echo "Run tests"
                 bat "npx newman run postman/test.postman_collection.json"
            }
        }

    }
}
