pipeline {
    agent any
    stages {
//          stage('Clean Workspace'){
//         steps {
//           cleanWs()
//           }
//       }
        stage ('Checkout') {
            steps {
                checkout scm
              }
            }          

        stage('Version node') {
            steps {
               echo "Version node"
               bat "node -v"
            }
        }
        stage('Install bootstrap') {
            steps {
                echo "install bootstrap"
                bat "npm install bootstrap@4.0.0-alpha.6"
            }
        }
          stage('Install Newman') {
             steps {
                    bat "npm install newman"
                    bat "npx newman -v"
            }
        }
        stage('Tests') {
            steps {
                 echo "Run tests"
                 bat "npx newman run postman/test.postman_collection.json"
            }
        }

    }
}
