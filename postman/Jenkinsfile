pipeline {
    agent any
    stages {
         stage('Clean Workspace'){
        steps {
          cleanWs()
          }
      }
        stage ('Checkout') {
            steps {
                checkout scm
              }
            }          

        stage('Version node') {
            steps {
               echo "Version node"
               bat "node -v"
            }
        }
        stage('Install Newman') {
            steps {
                echo "install newman"
                sh "npm install newman"
                echo "install reporter htmlextra"
                sh "npm install newman-reporter-htmlextra"
            }
        }
        stage('Tests') {
            steps {
                 echo "Run tests"
                 sh "newman run postman/test.postman_collection.json"
            }
        }

    }
}
