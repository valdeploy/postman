pipeline {
  agent any
  stages {
    stage('Clean Workspace'){
      steps {
        cleanWs()
      }
    }
    stage ('Checkout') {
      steps {
        checkout scm
      }
    }          
    stage('Testing...') {
     withDockerContainer("postman/newman:alpine"){
        sh 'newman run postman/test.postman_collection.jso'
      }
    }
  }
}
