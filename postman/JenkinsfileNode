pipeline {
agent any
    stages {
        stage('Test') {
            steps {
                script {
                    def tests = [:]
                    for (f in findFiles(glob: '**/html/*.html')) {
                        // Create temp variable, otherwise the name will be the last value of the for loop
                        def name = f
                        tests["${name}"] = {
                           stage(["${name}"){
                            build job: "${name}"
                        }
                        }
                    }
                    parallel tests
                }
            }
        }       
    }
}
