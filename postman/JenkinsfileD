pipeline {
  agent any
  stages {
    stage('Clean Workspace'){
      steps {
        cleanWs()
      }
    }
    stage ('Checkout') {
      steps {
        checkout scm
      }
    }          
    stage('Testing...') {
    agent{
        docker{image 'node:12.2.0-alpine'}
      }
      steps{
        sh 'npm install -g newman'
        sh 'newman run postman/test.postman_collection.jso'
      }
    }
  }
}
