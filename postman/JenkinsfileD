pipeline {
  agent any
  stages {
    stage('Clean Workspace'){
      steps {
        cleanWs()
      }
    }
    stage ('Checkout') {
      steps {
        checkout scm
      }
    }          
    stage('Testing...') {
    agent{
        docker{image 'postman/newman@1.0.0'}
      }
      steps{
        bat "npm install newman"
        bat "npx newman run postman/test.postman_collection.json"
      }
    }
  }
}
